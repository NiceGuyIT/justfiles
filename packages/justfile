set positional-arguments
set shell := ['nu', '-c']

# default recipe to display help information
default:
	@just --list


# List packages available to install
list:
	#!/usr/bin/env nu
	open "packages.json"


# Search available packages
search name:
	#!/usr/bin/env nu
	open "packages.json"
		| where name =~ "(?i:{{name}})"


# Install package
install package:
	#!/usr/bin/env nu
	nu get-package.nu {{package}}
